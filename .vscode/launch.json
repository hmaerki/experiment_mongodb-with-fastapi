    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Module uvicorn",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app:app",
                "--reload"
            ],
            "env": {
                "MONGODB_URL":   "mongodb://root:example@mongo-container:27017/"
            },
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app:app"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}